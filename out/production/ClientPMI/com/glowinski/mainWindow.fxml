<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <TextArea fx:id="chatTextArea" editable="false" prefHeight="122.0" prefWidth="478.0" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="messageTextField" HBox.hgrow="ALWAYS" />
        <Button fx:id="sendMessageButton" defaultButton="true" onAction="#onSendMessageButtonClick" text="Send" />
        <Button fx:id="clearChatButton" cancelButton="true" onAction="#onClearChatButtonClick" text="Clear" />
      <Button fx:id="getQuestion" mnemonicParsing="false" onAction="#getQuestionClicked" text="Start" />
    </HBox>
</VBox>
